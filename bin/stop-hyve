EXECDIR=$(dirname $0)
. $EXECDIR/CONFIG

errmsg() {
    echo "*** $1"
}

usage() {
    local msg=$1
    echo "Usage: $0 <vm_name>"
    [ -n "$msg" ] && errmsg "$msg"
    exit 1
}

#if [ `id -u` -ne 0 ]; then
#        errmsg "This script must be executed with superuser privileges."
#        exit 1
#fi

if [ $# -ne 1 ]; then
        usage
fi

HYVENAME=$(printf "%s\n" "$1" | tr A-Z a-z)

if [ ! -d "$HYVESTORE/$HYVENAME" ]; then
    errmsg "Hyve $HYVENAME does not exist."
    exit 1
fi

if [ ! -c "/dev/vmm/$HYVENAME" ]; then
    errmsg "Hyve $HYVENAME is already stopped."
    exit 1
fi

$BHYVECTL --destroy --vm="$HYVENAME" && echo "$HYVENAME has been stopped."